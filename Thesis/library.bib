@inproceedings{81,
abstract = {Game-based learning is based on the idea of using the motivational and immersive potential of video games in the educational context in order to provide an enjoyable form of learning. Thereby one core question regards to the optimal conditions for enjoyable experiences in games. To address this issue one can regard to the flow theory of Csikszentmihalyi according to which the balance between the perceived challenges of a situation and the perceived skills of a person determines the quality of subjective experience. The highest quality of subjective experience will be reached when challenges and skills are equally high. This so-called flow-experience is a hedonic state that can be characterized by being immersed in the activity. Since immersion is often though as the heart of enjoyable games the balance between challenges and skills seems to be of essential importance for (educational) video games, too. However, the challenges within a video game are manifold. Thus, a more fine-grained view is proposed whereby cognitive, socio-affective, and physical challenges are differentiated. Accordingly, these different challenges address to the respective cognitive, socio-affective, and physical skills. Cognitive challenges are, e.g., solving a riddle or dealing with the learning content. To master these cognitive challenges the accordingly cognitive skills like logical thinking or problem-solving abilities are required. Socio-affective challenges regards to the (para)social interaction with game characters and the handling of highly emotional situations. To address these socio-affective challenges, socio-affective skills like social competencies or stress coping strategies are needed. Physical challenges refer to the speed and the perceptual complexity of the game. To manage these physical challenges, the respective physical skills like spatial abilities or perceptual speed are necessary. Especially (educational) adventure-games often provide cognitive, socio-affective, and physical challenges simultaneously, e.g., when solving a riddle (cognitive challenge) while interacting with a beautiful female game-character (socio-affective challenge) in a situation with exciting background music (physical challenge). Thus, the question arises how these different challenges are interrelated. Three different kinds of interrelationships, an independent, an additive, and an interactive one will be disputed and exemplarily described with respect to their impact of an optimal, adaptive game-design. The different scenarios will be discussed in the face of the already existing related research. Additionally, possible empirical approaches for a more systematic investigation of the interrelationship of cognitive, socio-affective and physical challenges will be provided.},
author = {Linek, Stephanie B.},
booktitle = {Proceedings of the International Technology, Education and Development Conference},
file = {::},
keywords = {challenges,flow,games,learning,skills},
mendeley-tags = {challenges,flow,games,learning,skills},
title = {{Creating flow in game-based learning: Threefold conception of challenges and skills}},
type = {Conference proceedings (article)},
url = {http://www.elektra-project.org/contentmanager/data/public/429157001195033124/creating\_flow\_in\_game-based\_learning\_-\_threefold\_conception\_of\_challenges\_and\_skills.pdf},
year = {2007}
}
@phdthesis{55,
abstract = {Throughout the 1990's computer game development was dominated by the improvement of game graphics. However, graphical excellence is now the norm rather than the exception, and so other technologies are coming to the fore as developers strive to make their games stand out in an ever more crowded market. Sophisticated artificial intelligence (AI) is one such technology which is now receiving a large share of game development effort as game designers attempt to create more believable computer controlled characters. Influenced by the notion of situational intelligence, this work presents the proactive persistent agent (PPA) architecture, an intelligent agent architecture that has been developed to drive the behaviours of non player support characters in character centric computer games. The key features of the architecture are that: PPA characters display believable behaviour across a diverse range of situations, through the use of role passing and fuzzy cognitive maps; PPA based characters are capable of sophisticated social behaviours based on psychological models of personality, mood and interpersonal relationships; The architecture performs in real time on machines of modest specifications; It is relatively easy for non programmers to author characters behaviours using the architecture. The PPA architecture has been used in two demonstration applications (an adventure game and a system for animating sophisticated virtual humans) which will also be presented. These applications have been used to perform a rigorous evaluation of the architecture, which will also be described. Evaluation is notoriously difficult in systems used to simulate the behaviour of virtual characters, as the key notion of believability is troublingly subjective. However, in spite of the difficulties involved, an evaluation scheme has been developed and used. The evaluation shows that the PPA architecture is ideal for the contol of non player support characters in character centric games.},
