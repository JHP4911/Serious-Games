issn = {1573-1677},
journal = {Advances in health sciences education : theory and practice},
keywords = { Graduate, Graduate: methods, Medical, Psychological,Adult,Clinical Competence,Cognition,Computer-Assisted Instruction,Computer-Assisted Instruction: instrumentation,Education,Educational Measurement,Feedback,Female,Humans,Intuition,Male,Pathology,Problem-Based Learning,Reproducibility of Results,Self Efficacy},
number = {1},
pages = {9--30},
pmid = {19434508},
title = {{Factors affecting feeling-of-knowing in a medical intelligent tutoring system: the role of immediate feedback as a metacognitive scaffold.}},
