issn = {1660-2110},
journal = {Nephron. Clinical practice},
month = jan,
pages = {c85--96},
pmid = {21894042},
title = {{Chapter 4: Comorbidities and Current Smoking Status amongst Patients Starting Renal Replacement Therapy in England, Wales and Northern Ireland from 2008 to 2009.}},
